<div id="registerModal" class="reveal-modal" data-reveal>
  <center><h2 class="modal-title">Register</h2></center>
  <br>
  <form action="/users" method="post" data-remote="true"> <!-- form starts here.. -->
    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
          <input type="text" name="user[first_name]" placeholder="First Name" />
        </label>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
          <input type="text" name="user[last_name]" placeholder="Last Name" />
        </label>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
          <input type="text" name="user[email]" placeholder="example@example.com">
        </label>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
          <input type="password" name="user[password]" placeholder="Password">
        </label>
      </div>
    </div>

    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
          <input type="password" name="user[password_confirmation]" placeholder="Password Confirmation">
        </label>
      </div>
    </div>
    
    <div class="row">
      <div class="small-12 medium-4 small-centered columns">
        <center><input class="button small round custom-btn" type="submit" name="submit" value="Create Account"></center>
      </div>
    </div>
  </form>
</div>

<%= render partial: "layouts/navigation" %>

<div class="row panel nty-n-bottles-tile back">
	<div class="small-12 columns"> 
		<h3> Title: <%= @auction.product.name %>  </h3> 
	</div>
	<div class="small-12 columns"> 
		<h3> Description: <%= @auction.product.description %>  </h3> 
	</div>	
	<% if @auction.bids.empty? %>
	<div class="small-12 columns">
		<h3> Starting Price: <%= @auction.minimum_price %> </h3>
	</div>
	<% end %>

	<form action="/bids" method="post">
		<input type="text" name="offer_price" placeholder="Minimum Bid $<%=@auction.higest_bid + 1 %>.00">
		<input type="submit" name="submit" value="Place Bid">
	</form>
</div>
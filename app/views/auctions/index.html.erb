<%= render partial: "layouts/navigation" %>
<style>
	.nty-n-bottles-tile img{
		height: 200px;
		display: block;
		margin: 0 auto;
	}
	.nty-n-bottles-tile h3{
		font-size: 1.2rem;
		margin: 0 auto;
		width: 180px;
	}
	#beer-card {
		width: 300 !important;
	}
</style>

<div class="row beer-tiles">
	<div class="small-12 columns">
		<ul class="auction-tiles small-block-grid-1 medium-block-grip-4 large-block-grid-4">
			<!-- loop starts here (the list items are the things that are going to be looped) -->
		<% @auctions.each do |auction| %>	
			<li class="beer-card">
			<a href="/auctions/<%= auction.id%>">		
				<div id="card">
					<div class="row panel nty-n-bottles-tile">
						<div class="small-12 columns">
							<h3><%= auction.product.name %></h3>
						</div>
						<div class="small-12 columns"> 
							<img src="<%=auction.product.image_link%>" alt=""> <!-- add dat image hurrr -->
						</div>
					</div>
				</div>
				</a>	
			</li>
		<% end %>
			<!-- loop ends here -->
		</ul>
	</div>
</div>